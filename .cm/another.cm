# -*- mode: yaml -*-
manifest:
  version: 1.0
automations:
  approve_safe_changes:
    on:
      - pr_created
    if:
      - {{ is.formatting or is.docs or is.image }}
    run:
      - action : add-label@v1
        args:
          label: "safe change"
          color: '36A853'

# These custom expressions are used in the safe_changes automation
is:
  formatting: {{ source.diff.files | isFormattingChange }}
  docs: {{ files | allDocs }}
  image: {{ files | allImages }}
